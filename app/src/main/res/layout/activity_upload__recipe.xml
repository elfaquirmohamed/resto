<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delevry.resto.Upload_Recipe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="30dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_foodImage"
            android:src="@drawable/index"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe Name"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_recipe_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe Description"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_recipe_description"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe price"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_recie_price"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_sharp_btn_login"
            android:text="Select image"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:onClick="btnSelectImage"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_sharp_btn_login"
            android:text="Upload Recipe"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:onClick="btnUploadRecipe"
            />



    </LinearLayout>

</ScrollView>
